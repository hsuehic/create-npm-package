  },
  "engines": {
    "node": ">=16.0"
  },
  "keywords": [
    "create",
    "npm",
    "package",
    "boilerplate",
    "template",
    "typescript",
    "vscode",
    "jest",
    "husky",
    "commitlint",
    "changesets",
    "codecov"
  ],
  "bugs": {
    "url": "https://github.com/hsuehic/create-npm-package/issues"
  },
