    "@types/node": "^20.4.5",
    "@types/prompts": "^2.4.4",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "esbuild": "^0.18.17",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.45.0",
    "eslint-config-cnp": "latest",
    "husky": "^6.0.0",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.1",
    "npm-package-json-lint": "^7.0.0",
    "npm-package-json-lint-config-default": "^6.0.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "5.2.0-dev.20230803"
